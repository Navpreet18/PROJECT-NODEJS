<!DOCTYPE html>

<html>
    <head>
        
        <title>Edit New Student</title>
        
    </head>
    <body>
        <h1>Edit New student</h1>
        <form action="/students/<%= student._id %>?_method=PUT" method="POST">
            <div>
                <label for="firstname">Firstname: </label>
                <input type="text" id="firstname" name="firstname" value="<%= student.firstname %>" required/>
            </div>
            <div>
                <label for="lastname">lastname: </label>
                <input type="text" id="lastname" name="lastname" value="<%= student.lastname %>" required/>
            </div>
            </div>
            <div>
                <label for="birthdate">birthdate: </label>
                <input type="date" id="birthdate" name="birthdate" value="<%=new Date(student.birthdate).toISOString().split('T')[0] %>"required/>
            </div>
            <button type="submit">Update student</button>
        </form>
        <a href="/students">Back to students List</a>
        
       
    </body>
</html>